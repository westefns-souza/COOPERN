@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}


<div class="row" style="margin-top: 50px">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="text-center">
            <img src="~/img/logo-coopern.png" width="250" />
        </div>

        <h1 class="text-center">@ViewData["Title"]</h1>

        <section class="borde border-light">
            <form id="account" method="post">
                <h6 class="text-center text-muted">Use sua conta do EDUCACOOPERN para entrar</h6>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Entrar</button>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="col-6 text-end">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="coopern-btn-blue">Esqueceu sua senha?</a>
                    </div>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
