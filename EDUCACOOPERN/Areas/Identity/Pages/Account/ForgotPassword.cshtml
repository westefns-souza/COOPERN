@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu sua senha?";
}

<div class="row" style="margin-top: 50px">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="text-center">
            <img src="~/img/logo-coopern.png" width="250" />
        </div>

        <h1 class="text-center">@ViewData["Title"]</h1>

        <section class="borde border-light">
            <form id="account" method="post">
                <h6 class="text-center text-muted">Digite seu E-mail para recuperar sua senha!</h6>
                <p class="text-center text-muted">Será enviado um e-mail com o link para resetar sua senha de acesso na EducaCOOPERN.</p>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Resetar senha</button>
                </div>

            </form>
        </section>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
