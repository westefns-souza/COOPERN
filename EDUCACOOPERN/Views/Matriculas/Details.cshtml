@model EDUCACOOPERN.Models.Matricula

@{
    ViewData["Title"] = "Matrícula";
    
    Model.Aula.DataInicio = Model.Aula.DataInicio.ToLocalTime();
    Model.Aula.DataFim = Model.Aula.DataFim.ToLocalTime();
    
    var dataInicial = Model.Aula.DataInicio.ToString("dd/MM/yyyy HH:mm");
    var dataFinal = Model.Aula.DataFim.ToString("dd/MM/yyyy HH:mm");
}

<div class="row">
    <div class="col-6">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="col text-end">
        <h4 class="mt-2">Detalhes</h4>
    </div>
</div>

<hr />

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Aluno)
    </dt>

    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Aluno.FullName)
    </dd>

    <dt class="col-sm-2">
        Curso
    </dt>
    
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Aula.Curso.Nome)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Aula.ProfessorId)
    </dt>

    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Aula.Professor.FullName)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Aula.DataInicio)
    </dt>

    <dd class="col-sm-10">
        @dataInicial
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Aula.DataFim)
    </dt>

    <dd class="col-sm-10">
        @dataFinal
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Status)
    </dt>

    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Status)
    </dd>

    @if (Model.Compareceu)
    {
        @* <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NotaPre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NotaPre)
        </dd> *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NotaPos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NotaPos)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aproveitamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aproveitamento)
        </dd>
    }
</dl>

<div class="row">
    <div class="col">
        @if (!Model.Compareceu)
        {
            <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger"><i class="bi bi-trash"></i>Cancelar</a>
        }

        <a asp-action="Index" class="btn btn-light"><i class="bi bi-arrow-left-circle me-1"></i>Voltar</a>
    </div>
</div>
