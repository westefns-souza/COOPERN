@model EDUCACOOPERN.Models.Certificado

@{
    ViewData["Title"] = "Certificados";
}

<div class="row">
    <div class="col-10">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="col text-end">
        <h4 class="mt-2">Apagar</h4>
    </div>
</div>

<hr />

<h3>Você tem certeza que quer apagar esse certificado?</h3>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Descricao)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Descricao)
    </dd>
</dl>

@if (Model.Extencao.Equals("pdf"))
{
    <div action="row">
        <div class="col">
            <iframe src="data:application/pdf;base64,@Model.Arquivo" width="100%" height="500" allow="fullscreen download"></iframe>
        </div>
    </div>
}
else
{
    <div action="row">
        <div class="col text-center">
            <img src="data:image/@Model.Extencao;base64,@Model.Arquivo" class="img-fluid" />
        </div>
    </div>
}

<div class="row mt-2">
    <div class="col">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i>Deletar</button>
            <a asp-action="Index" class="btn btn-light"><i class="bi bi-arrow-left-circle me-1"></i>Voltar</a>
        </form>
    </div>
</div>
