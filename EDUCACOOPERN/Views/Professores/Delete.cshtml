@model EDUCACOOPERN.ViewModels.ProfessorViewModel

@{
    ViewData["Title"] = "Professores";
}

<div class="row">
    <div class="col-10">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="col text-end">
        <h4 class="mt-2">Apagar</h4>
    </div>
</div>

<hr />

<h3>Você cem certeza que quer apagar esse professor?</h3>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Nome)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Nome)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Email)
    </dt>

    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Email)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Celular)
    </dt>

    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Celular)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Ativo)
    </dt>

    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Ativo)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.AreasAtuacao)
    </dt>

    <dd class="col-sm-10">
        @{
            var areasAtuacao = string.Join(", ", Model.AreasAtuacao
            .Select(x => x.Nome)
            .OrderBy(x => x)
            .ToList()
            );
        }

        <span>@areasAtuacao</span>
    </dd>
</dl>


@if (Model.Formacoes != null && Model.Formacoes.Any())
{
    <h6>Formações</h6>

    <hr />

    <table class="table table-striped">
        <thead>
            <tr class="row">
                <th class="col-4">Grau</th>
                <th class="col">Descrição</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var formacao in Model.Formacoes)
            {
                <tr class="row">
                    <td class="col-4">@formacao.Tipo</td>
                    <td class="col">@formacao.Nome</td>
                </tr>
            }
        </tbody>
    </table>
}

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i>Deletar</button>
    <a asp-action="Index" class="btn btn-light"><i class="bi bi-arrow-left-circle me-1"></i>Voltar</a>
</form>
